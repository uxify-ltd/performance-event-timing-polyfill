{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/modules",
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
